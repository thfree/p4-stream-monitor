# .env.example
# Файл с переменными окружения для приложения
# Скопируйте этот файл как .env и настройте под свои нужды

# Общий пароль для всех серверов Perforce (опционально)
# Если задан, будет использоваться для всех серверов, где не указан индивидуальный пароль
P4_COMMON_PASSWORD=your_common_password_here

# Другие настройки Perforce (опционально)
# P4CLIENT=your_client_name
# P4CHARSET=utf8

# Режим запуска Flask
FLASK_ENV=development

# Путь к файлу тикетов (автоматически настраивается)
# P4TICKETS=instance/.p4tickets

# JFrog Configuration
JFROG_REGISTRY=repo.company.com
REPOSITORY=default-docker-local
IMAGE_NAME=p4-stream-monitor
TAG=latest

# Authentication
JFROG_TOKEN=your_access_token_here
JFROG_USER=your_username_or_docker

# OAuth2-Proxy
OAUTH2_OIDC_ISSUER_URL=https://sso.company.com/realms/prod
OAUTH2_CLIENT_ID=helix-oauth2-monitor
OAUTH2_CLIENT_SECRET=
OAUTH2_COOKIE_SECRET=